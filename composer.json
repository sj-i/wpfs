{
  "name": "sj-i/wpfs",
  "description": "a wordpress filesystem",
  "type": "project",
  "minimum-stability": "dev",
  "license": "MIT",
  "keywords": [
    "php",
    "fuse",
    "ffi",
    "wordpress"
  ],
  "authors": [
    {
      "name": "sji",
      "homepage": "https://twitter.com/sji_ch"
    }
  ],
  "bin": [
    "wpfs"
  ],
  "autoload": {
    "psr-4": {
      "Wpfs\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Wpfs\\": "tests"
    }
  },
  "require": {
    "php": "^8.0",
    "ext-ffi": "*",
    "sj-i/php-fuse": "0.2.0",
    "jgrossi/corcel": "^5.0",
    "php-di/php-di": "^6.3",
    "symfony/console": "^5.2"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0",
    "vimeo/psalm": "^4.6",
    "squizlabs/php_codesniffer": "^3.5",
    "mockery/mockery": "^1.4",
    "psalm/plugin-mockery": "^0.7.0"
  }
}
